@{
    ViewBag.Title = "客户信息";
}
@section Styles{

}
<div  ng-controller="customersController">
    <div class="clearfix grid-btn">
        <ol class="breadcrumb pull-left">
            <li><a href="/">EDO</a></li>
            <li><a  class="active">客户信息</a></li>
        </ol>
        <a class="btn btn-primary " ng-click="gridOption.create();"><i class="fa fa-plus"></i>新 建</a>
    </div>
    <div class="ng-grid panel panel-default" ng-cloak>
        <div class="panel-body" ng-cloak>
            <div grid grid-option="gridOption" data="data" grid-name="customers"></div>
        </div>
    </div>  
</div>
@section scripts{
    <script type="text/javascript">
  setTimeout(function () {
   require(["app"], function (app) {
       var module = angular.module("app");
         module.controller("customersController", [
            "$scope", "$http", "$filter", "$window", "$common", function ($scope, $http, $filter, $window, $common) {
                $scope.gridOption = {
                    height: 'auto',
                    rowNumber: true,
                    pkColumn: "Id",
                    rowDetail: true,
                    filterRow: true,
                    url: "/customers/page",
                    selectUrl: "/customers/select2",
                    editTemplateUrl: "/ngTemplate/customers.html"
                //, onRowSelected: function (row) { }
               // , onRenderRowDetail: function (row) { }
                };
            }
        ])
         ;
     });
   }, 0);
    </script>
}
