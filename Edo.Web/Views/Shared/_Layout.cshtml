<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/styles", "~/Content/angularjsui")
    @RenderSection("Styles", false)
</head>
<body ng-app="app">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">EDO</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="#">Link</a></li>
                    <li><a href="#">Link</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                            <li class="divider"></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class=" body-content" ng-controller="appController">
        <div class="sys-menu pull-left" ng-class="{switch:switch}">
            <div class="menu-switch">
                <i class="glyphicon glyphicon-th-list" ng-click="switch=!switch;"></i>
            </div>
            <div class="menu-item" ng-click="orders=!orders;">
                <i class="fa fa-battery-3 menu-item-icon"></i>
                <span ng-hide="switch">
                    <span class="item-text">Orders</span>
                    <i class="switch fa fa-angle-{{orders?'down':'left'}}"></i>
                </span>
            </div>
            <div ng-show="orders">
                <div class="menu-item">
                    <i class="fa"></i>
                    <i class=" fa menu-item-icon"></i>
                    <span>Orders-item1</span>
                </div>
                <div class="menu-item">
                    <i class="fa"></i>
                    <i class=" fa menu-item-icon"></i>
                    <span>Orders-item2</span>
                </div>
            </div>
            <div class="menu-item">
                <i class="fa fa-apple menu-item-icon"></i>
                <span ng-hide="switch">
                    <span>Users</span>
                </span>
            </div>
            <div class="menu-item">
                <i class="fa fa-audio-description menu-item-icon"></i>
                <span ng-hide="switch">
                    <span>Regions</span>
                </span>
            </div>
            <div class="menu-item">
                <i class="fa fa-automobile menu-item-icon"></i>
                <span ng-hide="switch">
                    <span>Roles</span>
                </span>
            </div>
        </div>
        <div class="container-fluid pull-left" ng-class="{switch:switch}">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/angularjsui")
    @Scripts.Render("~/bundles/common")
    @RenderSection("scripts", required: false)
</body>
</html>
